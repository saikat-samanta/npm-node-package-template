{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true, // Generate declaration files
    "declarationMap": true, // Generate declaration map files
    "rootDir": "./src", // Your source directory
    "lib": ["esnext", "dom"], // Modern JS libraries
    "outDir": "./dist", // The root directory for bundled JS
    "module": "ESNext" // TypeScript will use this as base setting
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
